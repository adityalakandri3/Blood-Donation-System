<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Blood Bridge Admin - Camp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template-->
    <link
      href="/vendor/fontawesome-free/css/all.min.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />

    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet" />
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <%- include('./layout/sidebar.ejs') %>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <%- include('./layout/topbar.ejs')%>
          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <h1 class="h3 mb-4 text-gray-800">Blood Donation Camps</h1>

            <div class="row">
              <div class="col-xl-3 col-md-6 mb-4">
                <a href="/admin/get-camp-form" class="text-decoration-none">
                  <div
                    class="card border-left-primary shadow h-100 py-2 text-center"
                  >
                    <div class="card-body">
                      <i class="fas fa-plus fa-2x text-primary mb-2"></i>
                      <h6 class="m-0 font-weight-bold text-primary">
                        Add New Camp
                      </h6>
                    </div>
                  </div>
                </a>
              </div>
            </div>

            <div class="row">
                <% data.forEach(camp => { %>
                  <div class="col-md-4 mb-4">
                    <div class="card shadow h-100">
                      <% if (camp.image) { %>
                        <img src="/<%= camp.image %>" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Camp Image">
                      <% } else { %>
                        <img src="/images/default-camp.jpg" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Default Image">
                      <% } %>
                      <div class="card-body">
                        <h5 class="card-title"><%= camp.name %></h5>
                        <p class="card-text text-muted">Organized by: <%= camp.organizer?.name || "Unknown" %></p>
                        <p class="card-text text-muted">Status: <%= camp.status.charAt(0).toUpperCase() + camp.status.slice(1) %></p>
                        <a href="/admin/get-camp-details/<%= camp._id %>" class="btn btn-primary">Show Camp</a>
                      </div>
                    </div>
                  </div>
                <% }) %>
              </div>
          </div>
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include('./layout/footer.ejs') %>
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <%- include('./layout/logout.ejs') %>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
