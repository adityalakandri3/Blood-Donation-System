<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Camp Registrations</title>
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="/css/sb-admin-2.min.css" rel="stylesheet" />
  </head>
  <body id="page-top">
    <div id="wrapper">
      <%- include('./layout/sidebar.ejs') %>

      <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
          <%- include('./layout/topbar.ejs') %>

          <div class="container-fluid">
            <!-- Camp Details Card -->
            <% if (camp.length > 0) { %>
              <% const camp = data[0].camp; %>
              <div class="card shadow mb-4">
                <div class="card-body">
                  <h4 class="card-title"><strong><%= camp.name %></strong></h4>
                  <% if (camp.organizer) { %>
                    <p><strong>Organizer:</strong> <%= camp.organizer.name %> (<%= camp.organizer.email %>)</p>
                  <% } %>
                  <p><strong>Date:</strong> <%= new Date(camp.date).toDateString() %></p>
                </div>
              </div>

              <!-- Registration Table -->
              <div class="card shadow mb-4">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">Registered Users</h6>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Name</th>
                          <th>Email</th>
                          <th>Status</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% data.forEach((reg, index) => { %>
                          <tr>
                            <td><%= index + 1 %></td>
                            <td><%= reg.user.name %></td>
                            <td><%= reg.user.email %></td>
                            <td><%= reg.status.charAt(0).toUpperCase() + reg.status.slice(1) %></td>
                          </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            <% } else { %>
              <!-- If no registrations, show only camp details -->
              <div class="card shadow mb-4">
                <div class="card-body">
                  <h4 class="card-title"><strong><%= camp.name %></strong></h4>
                  <% if (camp.organizer) { %>
                    <p><strong>Organizer:</strong> <%= camp.organizer.name %> (<%= camp.organizer.email %>)</p>
                  <% } %>
                  <p><strong>Date:</strong> <%= new Date(camp.date).toDateString() %></p>
                  <div class="alert alert-info" role="alert">
                    No registrations found for this camp.
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        </div>

        <%- include('./layout/footer.ejs') %>
      </div>
    </div>

    <a class="scroll-to-top rounded" href="#page-top"><i class="fas fa-angle-up"></i></a>
    <%- include('./layout/logout.ejs') %>

    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="/js/sb-admin-2.min.js"></script>
  </body>
</html>
